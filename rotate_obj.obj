import math
import sys
import os

def rotate_x(vertex, angle):
    """Rotiert einen Vertex um die x-Achse um den gegebenen Winkel (in Grad)."""
    x, y, z = vertex
    rad = math.radians(angle)
    new_y = y * math.cos(rad) - z * math.sin(rad)
    new_z = y * math.sin(rad) + z * math.cos(rad)
    return x, new_y, new_z

def rotate_y(vertex, angle):
    """Rotiert einen Vertex um die y-Achse um den gegebenen Winkel (in Grad)."""
    x, y, z = vertex
    rad = math.radians(angle)
    new_x = x * math.cos(rad) + z * math.sin(rad)
    new_z = -x * math.sin(rad) + z * math.cos(rad)
    return new_x, y, new_z

def rotate_z(vertex, angle):
    """Rotiert einen Vertex um die z-Achse um den gegebenen Winkel (in Grad)."""
    x, y, z = vertex
    rad = math.radians(angle)
    new_x = x * math.cos(rad) - y * math.sin(rad)
    new_y = x * math.sin(rad) + y * math.cos(rad)
    return new_x, new_y, z

def rotate_obj_file(input_file, axis, angle):
    """Liest eine .obj-Datei, rotiert die Vertex-Daten um die angegebene Achse und den Winkel und speichert sie in einer neuen Datei."""
    # Bestimme den Namen der Ausgabedatei
    base_name, ext = os.path.splitext(input_file)
    output_file = f"{base_name}_rot_{axis}_{angle}{ext}"

    with open(input_file, 'r') as file:
        lines = file.readlines()

    with open(output_file, 'w') as file:
        for line in lines:
            if line.startswith('v '):  # Nur Vertex-Zeilen bearbeiten
                parts = line.split()
                x, y, z = float(parts[1]), float(parts[2]), float(parts[3])
                vertex = (x, y, z)

                # Wähle die entsprechende Rotationsfunktion basierend auf der Achse
                if axis == 'x':
                    new_vertex = rotate_x(vertex, angle)
                elif axis == 'y':
                    new_vertex = rotate_y(vertex, angle)
                elif axis == 'z':
                    new_vertex = rotate_z(vertex, angle)
                else:
                    raise ValueError("Ungültige Achse. Muss 'x', 'y' oder 'z' sein.")

                # Schreibe die rotierten Vertices in die neue Datei
                file.write(f"v {new_vertex[0]} {new_vertex[1]} {new_vertex[2]}\n")
            else:
                # Alle anderen Zeilen unverändert lassen
                file.write(line)

    print(f"Datei gespeichert: {output_file}")

if __name__ == "__main__":
    # Überprüfen, ob die erforderlichen Argumente übergeben wurden
    if len(sys.argv) != 4:
        print("Verwendung: python3 rotate_obj.py <obj_datei> <achse> <winkel>")
        sys.exit(1)

    # Argumente aus der Kommandozeile lesen
    input_file = sys.argv[1]
    axis = sys.argv[2].lower()
    angle = int(sys.argv[3])

    # Überprüfen, ob der Winkel gültig ist (90, 180 oder 270)
    if angle not in [90, 180, 270]:
        print("Ungültiger Winkel. Muss 90, 180 oder 270 sein.")
        sys.exit(1)

    # Führe die Rotation durch
    rotate_obj_file(input_file, axis, angle)
